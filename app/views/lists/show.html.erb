<section class="todoapp">

  <header class="header">
    <h1><%= @list.name %></h1>
    <%= form_for([@list, @item]) do |f| %>
      <%= f.text_field :description, :class => "new-todo", :placeholder => (@item.errors.full_messages_for(:description).first || "Add an item") %>
      <%= f.submit :style => "display: none" %>
    <% end %>
  </header>

  <section class="main">
    <input class="toggle-all" type="checkbox">
    <label for="toggle-all">Add an item</label>
    <ul class="todo-list">

      <% @list.items.each do |item| %>
      <%= render partial: 'items/items_li', locals: {item: item} %>
      <% end %>

    </ul>
  </section>

  <footer class="footer">
  </footer>

</section>
