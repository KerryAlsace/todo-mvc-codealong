<section class="todoapp">

  <header class="header">
    <h1>Login!</h1>

    <%= form_tag(sessions_path) do %>
      <%= text_field_tag :email, '', class: "new-todo", placeholder: "Log in with your email address" %>
      <%= text_field_tag :password, '', class: "new-todo", placeholder: "Enter your password" %>
      <%= submit_tag %>
    <% end %>

    <%= link_to "Login via Github", "/auth/github" %>

  </header>

  <footer class="footer">
  </footer>

</section>
